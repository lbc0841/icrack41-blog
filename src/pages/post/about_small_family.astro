---
import MainNavigation from "../../components/MainNavigation.astro";
import Layout from "../../layouts/Layout.astro";

import AboutSmall from "../../content/about_small_family.md"
---


<Layout>
    <MainNavigation/>

    <div class="background"></div>

    <div class="blog-container">

        <b class="blog-title">關於 small 家族</b>
        <small class="text-white">2025-05-16</small>
        <hr><br>

        <AboutSmall/>
    </div>

    <button class="back-button" onclick="location.href='/icrack41-blog/posts'">
        <i class="fa-solid fa-arrow-left"></i>
    </button>

    <style>
        .blog-container {
            position: absolute;
            top: 0;
            left: 50%;
            transform: translateX(-50%);

            width: 80%;
            height: 100%;

            background-color: rgba(0, 0, 0, 0.3);
            backdrop-filter: blur(14px);

            padding-top: 70px;
            padding-bottom: 40px;
            padding-left: 40px;
            padding-right: 40px;


            color: rgba(255, 255, 255, 0.7);
            overflow-y: auto;
        }

        .blog-title {
            font-size: 40px;
            color: white;
        }

        .back-button {
            position: absolute;
            bottom: 20px;
            left: 40px;

            font-size: 40px;
            color: white;
        }

        @media screen and (max-width: 640px) {
            .blog-container {
                width: 96%;

                padding-left: 20px;
                padding-right: 20px;
            }

            .back-button {
                display: none;
            }

            .blog-title {
                display: block;
                font-size: 28px;
            }
        }
    </style>
</Layout>
