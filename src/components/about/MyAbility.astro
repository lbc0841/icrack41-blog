<style>
    .zj-progress {
        margin-top: 40px;
        position: relative;

        width: 100%;
    }

    .zj-progress svg {
        overflow: visible;
    }

    .zj-progress svg circle {
        fill: transparent;
        stroke: #418bd4;
        stroke-width: 6;
        stroke-dasharray: 500;
        stroke-linecap: round;
    }

    .zj-progress svg text {

        fill: #418bd4;
        font-size: 60px;

    }

</style>
