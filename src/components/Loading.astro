<div class="loading-anim">
    <svg width="50px" height="50px" viewBox="0 0 50 50">
        <path d="M 47,49
        h -44 q -2,0 -2,-2
        v -44 q 0,-2 2,-2"></path>

        <path d="M 3,1
        h 44 q 2,0 2,2 
        v 44 q 0,2 -2,2"></path>

    </svg>
    <small>Loading...</small>
</div>

<style>

    .loading-anim {
        display: flex;
        width: 100%;
        height: 100%;
    }

    .loading-anim svg {
        position: absolute;
        top: 45%;
        left: 50%;
        transform: translateX(-50%);
        overflow: visible;

        z-index: 1000;
    }

    .loading-anim svg path {
        fill: none;
        stroke: #94dbfa;
        stroke-width: 6;

        stroke-dasharray: 100;
        stroke-dashoffset: 0;
        stroke-linecap: round;

        transform: rotateZ(-45deg);
        transform-origin: 50% 50%;

        animation: anim-loading 1s ease-out infinite;
        
    }

    .loading-anim small {
        position: absolute;
        left: 50%;
        top: 50%;

        transform: translateX(-50%);

        color: #fff;

        font-weight: bold;
        text-shadow: #94dbfa 1px 0 10px;

        transform-origin: 50% 50%;

        font-size: 1;
        z-index: 1001;
    }
</style>